<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/shipTypeConsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Choose Shipping Type"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/shipAddrText"
        app:layout_constraintTop_toBottomOf="@+id/addrText" />

    <TextView
        android:id="@+id/shipTypeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:text="Economy"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintStart_toEndOf="@+id/imageView6" />

    <TextView
        android:id="@+id/estimateText"
        android:layout_width="223dp"
        android:layout_height="31dp"
        android:layout_marginTop="4dp"
        android:text="Estimated Arrival 20 Dec 2023"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/shipTypeText"
        app:layout_constraintTop_toBottomOf="@+id/shipTypeText" />

    <TextView
        android:id="@+id/shipAddrText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Shipping Address"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/back"
        app:layout_constraintTop_toBottomOf="@+id/back" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checkout"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/back" />

    <Button
        android:id="@+id/shipBtn"
        android:layout_width="93dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:text="CHANGE"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/addrTypeText" />

    <Button
        android:id="@+id/continueBtn"
        android:layout_width="324dp"
        android:layout_height="56dp"
        android:layout_marginBottom="30dp"
        android:text="Continue to Payment"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/shipTypeBtn"
        android:layout_width="93dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:text="CHANGE"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shipTypeText" />

    <TextView
        android:id="@+id/addrTypeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:text="Home"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintStart_toEndOf="@+id/imageView3" />

    <TextView
        android:id="@+id/addrText"
        android:layout_width="220dp"
        android:layout_height="46dp"
        android:layout_marginTop="4dp"
        android:text="1901 Thornridge Cir. Shiloh, Hawaii 81063"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/addrTypeText"
        app:layout_constraintTop_toBottomOf="@+id/addrTypeText" />

    <TextView
        android:id="@+id/orderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Order List"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/estimateText" />

    <View
        android:id="@+id/view3"
        android:layout_width="320dp"
        android:layout_height="1dp"
        android:background="@color/theme_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addrText" />

    <View
        android:id="@+id/view2"
        android:layout_width="320dp"
        android:layout_height="1dp"
        android:background="@color/theme_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/estimateText" />

<!--    <ListView-->
<!--        android:id="@+id/orderList"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="311dp"-->
<!--        android:layout_marginTop="12dp"-->
<!--        app:layout_constraintStart_toStartOf="@+id/orderText"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/orderText" />-->
    <!-- activity_main.xml -->

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/shipAddrText"
        app:layout_constraintTop_toBottomOf="@+id/shipAddrText"
        app:srcCompat="@drawable/location_sign_svgrepo_com" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/shipTypeConsText"
        app:layout_constraintTop_toBottomOf="@+id/shipTypeConsText"
        app:srcCompat="@drawable/shopping_cart_svgrepo_com" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/productListView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintStart_toStartOf="@+id/orderText"
        app:layout_constraintTop_toBottomOf="@+id/orderText" />


</androidx.constraintlayout.widget.ConstraintLayout>