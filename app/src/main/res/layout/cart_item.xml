<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    app:fontFamily="@font/poppins"
    app:cardElevation="0.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/cart_product_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="@string/product_description"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/elegant_woman_posing_classic_suit" />

        <!-- Media -->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_light"
                    android:text="@string/product_name"
                    android:textStyle="bold"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/product_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_light"
                    android:text="$1"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="@color/theme_color"
                    android:textSize="12sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_gravity="bottom|left"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:textSize="12sp"
                    android:text="Qty"/>

                <ImageView
                    android:id="@+id/decrease"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@+id/price_val"
                    app:layout_constraintTop_toTopOf="@+id/price"
                    app:srcCompat="@drawable/decrease" />

                <TextView
                    android:id="@+id/item_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="10dp"
                    android:text="1" />


<!--                <ImageView-->
<!--                    android:id="@+id/line"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="30dp"-->
<!--                    android:scaleX="12"-->
<!--                    app:srcCompat="@drawable/horizontal_line"-->
<!--                    android:contentDescription="0" />-->


                <ImageView
                    android:id="@+id/increase"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintStart_toEndOf="@+id/price"
                    app:layout_constraintTop_toTopOf="@+id/price"
                    app:srcCompat="@drawable/increase" />


            </LinearLayout>

        <!-- Title, secondary and supporting text -->


        <CheckBox
            android:id="@+id/icon"
            android:layout_marginBottom="10dp"
            style="@style/Widget.App.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:button="@drawable/sl_favourite_24dp"
            android:buttonTint="@color/md_theme_dark_secondaryContainer"
            android:textColorHighlight="@color/md_theme_dark_inverseSurface"
            android:textColorLink="@color/md_theme_dark_secondaryContainer"
            app:checkedState="unchecked"
            tools:context=".LandingPage" />

            <Button
                android:id="@+id/proceedBtn"
                android:backgroundTint="@color/white"
                android:textColor="@color/theme_color"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:padding="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:text="Proceed"
                android:textSize="12sp"
                android:textColorHighlight="@color/md_theme_dark_inverseSurface"
                android:textColorLink="@color/md_theme_dark_secondaryContainer"
                tools:context=".LandingPage" />

        </FrameLayout>



    </LinearLayout>


</androidx.cardview.widget.CardView>